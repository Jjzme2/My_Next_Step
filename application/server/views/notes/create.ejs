<div>
  <h1>Create a New Note</h1>
  <form id="noteForm">
    <div>
      <label for="title">Title:</label>
      <input
        type="text"
        id="title"
        name="title"
        required
      />
    </div>
    <div>
      <label for="content">Content:</label>
      <textarea
        id="content"
        name="content"
        required
      ></textarea>
    </div>
    <div>
      <label for="tags">Tags:</label>
      <input
        type="text"
        id="tags"
        name="tags"
      />
    </div>
    <button type="submit">Create Note</button>
  </form>
</div>
